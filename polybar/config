[colors]
background = #BCC3C3
background-alt = #002B36
foreground = #002B36
foreground-alt = #BCC3C3
primary = #ffb52a
secondary = #e60053
alert = #FF0000

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false

foreground = ${colors.foreground-alt}
background = ${colors.background-alt}

line-size = 1 
line-color = #dfdfdf

border-top-size = 0
border-bottom-size = 0
border-left-size = 0
border-right-size = 0

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Hack:pixelsize=9;3
font-2 = "Wuncon Siji:pixelsize=10;3"
font-1 = Weather Icons:style=Regular:size=10;2
font-3 = FontAwesome5Free:style=Solid:pixelsize=10;3
font-4 = FontAwesome5Brands:style=Solid:pixelsize=10;3

modules-left = i3 sp2 fs1 
modules-center = mpd
modules-right = updates-arch-combined sp2 usd sp2 openweathermap-fullfeatured sp2 system-cpu-loadavg sp2 eth temperature sp2 memory sp2 wlan sp2 netspdwlan sp2 volume sp2 date sp2 xkeyboard sp2 powermenu 

tray-position = right
tray-padding = 0
